@using SSM.Models;
@model SSM.Models.TempModel.ProfileModel
@*<script src="~/Scripts/eve.min.js"></script>
    <script src="~/Scripts/Raphael.js"></script>
    <script src="~/Scripts/JustGage.js"></script>*@


@*<script src="~/Scripts/animateprofile.js"></script>*@

<style type="text/css">
    @@font-face {
        font-family: 'Roboto-Light';
        src: url("../../fonts/Roboto-Light.ttf") format('truetype');
    }

    @@font-face {
        font-family: 'OpenSans-Bold';
        src: url('../../fonts/OpenSans-Bold.ttf') format('truetype');
    }
</style>

<style>

</style>


<link href="~/Content/Profile.css" rel="stylesheet" />



    @using (Html.BeginForm("CreateNewProfile", "Profile", FormMethod.Post,
                                                                         new { enctype = "multipart/form-data", @style = "padding:0px" }))
    {
        <div class="col-sm-3">
            <div class="panel widget light-widget panel-bd-top" style="max-width:1000px  !important">
                <div class="panel-heading no-title"> </div>

                <div class="panel-body">
                    <div class="text-center vd_info-parent" style="height:300px;width:100%;border:1px">@Html.TextBoxFor(m => m.avatar, new { @class = "form-control", type = "file", style = "padding-top:145px;height:300px;max-width:4000px !important;width:100%" }) </div>

                    <h4>Sale Representative</h4>
                    <div class="mgtp-20">
                        <table class="table table-striped table-hover">
                            <tbody>
                                <tr>
                                    <td style="width:30%;"><font color="black"> User Name</font></td>
                                    <td>@Html.TextBoxFor(m => m.username, new { @class = "form-control" })</td>
                                </tr>
                                <tr>
                                    <td><font color="black"> Password</font></td>
                                    <td>@Html.PasswordFor(m => m.password, new { @class = "form-control" })</td>
                                </tr>
                                <tr>
                                    <td><font color="black"> Confirm Password</font></td>
                                    <td><input type="password" class="form-control" placeholder="Confirm Password"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-sm-9">
            <div class="tabs widget" style="margin:0  !important;max-width:5000px !important">
                <ul class="nav nav-tabs widget" style="max-width:5000px !important">
                    <li class="active"> <a data-toggle="tab" href="#profile-tab"> Profile <span class="menu-active"><i class="fa fa-caret-up"></i></span> </a></li>
                </ul>
                <div class="tab-content" style="width:100%">
                    <div id="profile-tab" class="tab-pane active">
                        <div class="pd-20">
                            
                            <h3 class="mgbt-xs-15 mgtp-10 font-semibold"><i class="icon-user mgr-10 profile-icon"></i> ABOUT</h3>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="row mgbt-xs-0">
                                        <label class="col-xs-5 control-label">First Name:</label>
                                        <div class="col-xs-7 controls">@Html.TextBoxFor(m => m.firstname, new { @class = "form-control" })</div>
                                        <!-- col-sm-10 -->
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="row mgbt-xs-0">
                                        <label class="col-xs-5 control-label">Last Name:</label>
                                        <div class="col-xs-7 controls">@Html.TextBoxFor(m => m.lastname, new { @class = "form-control" })</div>
                                        <!-- col-sm-10 -->
                                    </div>
                                </div>
                            </div>
                            <br />
                            <br />
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="row mgbt-xs-0">
                                        <label class="col-xs-5 control-label">Full Name:</label>
                                        <div class="col-xs-7 controls">@Html.TextBoxFor(m => m.fullname, new { @class = "form-control" })</div>
                                        <!-- col-sm-10 -->
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="row mgbt-xs-0">
                                        <label class="col-xs-5 control-label">Email:</label>
                                        <div class="col-xs-7 controls">@Html.TextBoxFor(m => m.email, new { @class = "form-control" })</div>
                                        <!-- col-sm-10 -->
                                    </div>
                                </div>
                            </div>
                            <br />
                            <br />
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="row mgbt-xs-0">
                                        <label class="col-xs-5 control-label">City:</label>
                                        <div class="col-xs-7 controls">@Html.TextBoxFor(m => m.city, new { @class = "form-control" })</div>
                                        <!-- col-sm-10 -->
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="row mgbt-xs-0">
                                        <label class="col-xs-5 control-label">Country:</label>
                                        <div class="col-xs-7 controls">@Html.TextBoxFor(m => m.country, new { @class = "form-control" })</div>
                                        <!-- col-sm-10 -->
                                    </div>
                                </div>
                            </div>
                            <br />
                            <br />
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="row mgbt-xs-0">
                                        <label class="col-xs-5 control-label">Birthday:</label>
                                        <div class="col-xs-7 controls">@Html.TextBoxFor(m => m.birthday, new { @class = "form-control" , @value=""})</div>
                                        <!-- col-sm-10 -->
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <div class="row mgbt-xs-0">
                                        <label class="col-xs-5 control-label">Phone:</label>
                                        <div class="col-xs-7 controls">@Html.TextBoxFor(m => m.phone, new { @class = "form-control" })</div>
                                        <!-- col-sm-10 -->
                                    </div>
                                </div>
                                <div class="vd_info tr"> <button type="submit" class="btn btn-success"> Complete </button> </div>
                            </div>
                            <br />
                            <br />

                            <hr class="pd-10">
                            <div class="row">
                                <!-- col-sm-7 -->
                                <div class="col-sm-6">
                                    <h3 class="mgbt-xs-15 font-semibold"><i class="fa fa-money  mgr-10 profile-icon"></i>Product Responsible</h3>

                                    @for (int i = 0; i < Model.responsibleList.Count(); i++)
                                    {
                                        <div class="col-sm-12">
                                            <div class="form-group">

                                                @Html.HiddenFor(m => m.responsibleList[i].softwareid)
                                                <label class="control-label col-md-3 col-sm-3 col-xs-12">@Html.DisplayFor(m => m.responsibleList[i].productName)</label>
                                                <div class="col-md-3 col-sm-9 col-xs-12">
                                                    <input type="checkbox" class="form-control">
                                                </div>
                                                <div class="col-md-3 col-sm-9 col-xs-12">
                                                    @Html.TextBoxFor(m => m.responsibleList[i].minshare, new { @class = "form-control", placeholder = "Min Share" })%
                                                </div>
                                                <div class="col-md-3 col-sm-9 col-xs-12">
                                                    @Html.TextBoxFor(m => m.responsibleList[i].maxshare, new { @class = "form-control", placeholder = "Max Share" })%
                                                </div>
                                            </div>
                                        </div>
                                    }




                                </div>
                                <!-- col-sm-7 -->
                            </div>
                            <!-- row -->
                        </div>
                        <!-- pd-20 -->
                    </div>


                </div>
                <!-- tab-content -->
            </div>
            <!-- tabs-widget -->
        </div>
    }




<br />



