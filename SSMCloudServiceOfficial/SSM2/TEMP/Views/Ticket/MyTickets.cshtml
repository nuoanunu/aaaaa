@using SSM.Models;

<link href="~/Content/fonts/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/animate.min.css" rel="stylesheet" />
<link href="~/Content/custom.css" rel="stylesheet" />
<link href="~/Content/icheck/flat/green.css" rel="stylesheet" />
<style>
    body {
        background-color: #F7F7F7;
    }
</style>
<script src="~/Scripts/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"> </script>
<script src="https://cdn.datatables.net/1.10.12/js/dataTables.bootstrap.min.js"> </script>

<script>
    $(document).ready(function () {
        $("#dealtable").DataTable();
    })
</script>
<div class="page-title">
    <div class="title_left">
        <h3>Customer support <small></small></h3>
    </div>
    
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Tickets</h2>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <p>List of tickets asigned to you</p>
                <!-- start project list -->
                <table id="dealtable" class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 20%">Created Date</th>
                            <th style="width: 20%">Ticket name</th>
                            <th>Description</th>
                            <th>Creator</th>
                            <th>Status</th>
                            <th style="width: 20%">Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Ticket deal in (List<Ticket>)ViewData["mytickets"])
                        {
                            <tr>

                                <td>
                                    @deal.CreatedDay
                                </td>
                                <td>@deal.TicketName</td>
                                <td>
                                    @deal.Description
                                </td>
                                <td>
                                    @deal.AspNetUser.customers.First().cusName
                                </td>
                                <td>
                                    @if (deal.TicketStatus ==1 )
                                    {
                                        <button type="button" class="btn btn-warning btn-xs">Waiting</button>
                                    }
                                    else if (deal.TicketStatus == 2)
                                    {
                                        <button type="button" class="btn btn-primary btn-xs">Processing</button>
                                    }
                                    else if (deal.TicketStatus == 3)
                                    {
                                        <button type="button" class="btn btn-success btn-xs">Completed</button>
                                    }
                                 
                                </td>
                                <td>
                                    <a href="/Ticket/Detail?id=@deal.id" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>

                                    <a href="#" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
                <!-- end project list -->
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/progressbar/bootstrap-progressbar.min.js"></script>
<script src="~/Scripts/nicescroll/jquery.nicescroll.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<!-- icheck -->
<script src="~/Scripts/icheck/icheck.min.js"></script>
<script src="~/Scripts/custom.js"></script>
<!-- pace -->
<script src="~/Scripts/pace/pace.min.js"></script>