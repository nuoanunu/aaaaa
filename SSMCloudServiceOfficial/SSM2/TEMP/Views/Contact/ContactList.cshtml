<h1> <font style="font-family:Roboto-Light"> Contact List</font> </h1>

<p>
    @Html.ActionLink("New Contact", "NewContact", "Contact", null, new { @class = "btn btn-primary" })
</p>
<div>
    <table id="myData" class="table table-striped table-bordered" cellspacing="0">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    First Name
                </th>                
                <th>
                    Photo
                </th>               
                <th>
                    Email
                </th>
                <th>
                    Phone
                </th>
                <th>
                    Site
                </th>
                <th>
                    Company
                </th>
                <th>
                    Street
                </th>                
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewData["contactList"] != null)
            {
                foreach (contact sp in (List<contact>)ViewData["contactList"])
                {
                    <tr>
                        <td align="center" style="height:100px">
                            @sp.id
                        </td>
                        <td align="center">
                            @sp.LastName
                        </td>
                        <td align="center">
                            @sp.FirstName
                        </td>                        
                        <td align="center">
                            @*<img src="@sp.Photo" />*@
                            <text>avatar</text>
                        </td>                       
                        <td align="center">
                            @sp.emails
                        </td>
                        <td align="center">
                            @sp.Phone
                        </td>
                        <td align="center">
                            @sp.Sites
                        </td>
                        <td align="center">
                            @sp.CompanyID
                        </td>
                        <td align="center">
                            @sp.Street
                        </td>                       
                        <td>
                            @Html.ActionLink("Edit", "EditContact", "Contact", new { id = @sp.id }, null)
                        </td>
                        @*<td>
        <button onclick="editpage(@sp.id)">Detail</button>
        <button onclick="editpage(@sp.id)">Edit</button>
    </td>*@
                        
                    </tr>
                }
            }

        </tbody>
    </table>
    @*<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myNewProductModal">+New Product</button>*@
</div>