@using SSM.Models;
@model List<Plan_Step>

@foreach (var step in Model)
{
    <div id="@("stepcontent-" + step.stepNo )" style="width:100%">
        <h2 class="StepTitle">Step step.stepNo Content</h2>
        <div class="form-horizontal form-label-left">
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3" for="first-name">
                    Time from last Step
                </label>
                <div class="col-md-6 col-sm-6">
                    @Html.TextBoxFor(m => step.stepNo , new { @class = "form-control col-md-7 col-xs-12" });
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3" for="first-name">
                    Content
                </label>
                <div class="col-md-8 col-sm-8">
                    @Html.TextAreaFor(m => step.StepEmailContent, new { @class = "form-control col-md-7 col-xs-12" });
                </div>
            </div>
        </div>
        </div>
}

